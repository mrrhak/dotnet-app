@inject IConfiguration _configuration
@{
    ViewData["Title"] = "Home Page";
    string name = System.Net.Dns.GetHostName();
    string appColor = _configuration.GetValue<string>("AppSetting:AppColor") ?? "black";
}

<div class="text-center">
    <h1 class="display-1" style="color: @appColor;">ASP.NET CORE MVC</h1>
    <p class="mt-5 mb-0" style="font-size: 24px;">Hostname</p>
    <small class="text-muted">(Container ID)</small>
    <p class="display-6 mt-2">@name</p>
    <a asp-controller="App" asp-action="GetAppColor" target="_blank" class="mt-4">API Get App Color</a>
</div>
